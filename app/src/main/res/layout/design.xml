<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#FBC522"
    app:cardCornerRadius="30dp"
    android:elevation="30dp"
    android:layout_margin="10dp"
    >

    <TextView
        android:id="@+id/tvid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="id"
        android:textSize="30sp"
        android:layout_marginEnd="70dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/ivw"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/washing"
        android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/tvname"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:text="Whirlpool"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/tvdesc"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="right"
        android:text="Desc here..."
        android:textSize="20sp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="100dp"
        android:textStyle="italic"
        android:textColor="#A4000000"
        android:singleLine="true"
      />

    <TextView
        android:id="@+id/tvprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="40,000/-"
        android:textSize="25sp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="100dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:singleLine="true"
        />

    <ImageView
        android:id="@+id/imgdel"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/delete_24"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/imgupdt"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginTop="120dp"
        android:layout_marginRight="5dp"
        app:srcCompat="@drawable/update_24" />

</androidx.cardview.widget.CardView>